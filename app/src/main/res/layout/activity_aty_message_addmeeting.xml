<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical"
    tools:context="com.example.nenguou.youngleague.AboutFragemt.fragment_for_bottom.aty_message_addmeeting">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="?attr/colorPrimary">

        <ImageButton
            android:id="@+id/meetingback"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@color/colorARed"
            android:src="@drawable/backkk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="支部党员大会"
            android:textColor="@color/colorAWhite"
            android:textSize="20dp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorAWhite">

                <TextView
                    android:id="@+id/star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="*"
                    android:textColor="#ff0000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/meetingtheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/star1"
                    android:text="会议主题："
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/meetingtheme"
                    android:hint="请输入会议主题"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:shadowColor="@color/colorARed"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrayDark"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorAWhite">

                <TextView
                    android:id="@+id/star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="*"
                    android:textColor="#ff0000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/meetingstarttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/star2"
                    android:text="开始时间："
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/meetingstarttime"
                    android:hint="1 月 1 日 00:00"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrayDark"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorAWhite">

                <TextView
                    android:id="@+id/star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="*"
                    android:textColor="#ff0000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/meetingpostion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/star3"
                    android:text="会议地点："
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/meetingpostion"
                    android:hint="请输入会议地点"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrayDark"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAWhite">

                <TextView
                    android:id="@+id/star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="*"
                    android:textColor="#ff0000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/meetingcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/star4"
                    android:text="开始时间："
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/meetingcontent"
                    android:hint="请输入会议内容"
                    android:lines="7"
                    android:maxLines="7"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrayDark"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAWhite">

                <TextView
                    android:id="@+id/star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:text="*"
                    android:textColor="#ff0000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/meetingrequire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/star5"
                    android:text="会议要求："
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/meetingrequire"
                    android:hint="请输入会议要求"
                    android:lines="7"
                    android:maxLines="7"
                    android:paddingTop="1dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorGrayDark"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>
            <RelativeLayout

                android:background="@color/colorAWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button_bg"
                    android:text="发起会议"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>


    </ScrollView>



</LinearLayout>
